@model Car
@using (Html.BeginForm("AddCar", "Cars", FormMethod.Post)) {
<fieldset>
    <div class="form-row">
        <div class="form-group col-md-6">
            @Html.LabelFor(c=> c.CarName,"Название")
            <br />
            @Html.EditorFor(c=>c.CarName)
        </div>
        <div class="form-group col-md-6">
            @Html.LabelFor(c => c.ShortDescription, "Краткое описание")
            <br />
            @Html.EditorFor(c => c.ShortDescription)
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(c => c.LongDescription, "Полное описание")
        <br/>
        @Html.EditorFor(c => c.LongDescription)
    </div>
    <div class="form-row">
        <div class="form-group col-md-2">
            @Html.LabelFor(c => c.Price, "Цена")
            <br>
            @Html.EditorFor(c => c.Price)
        </div>
        <div class="form-group col-md-6">
            @Html.LabelFor(c => c.CategoryId, "Айди категории")
            <br/>
            @Html.EditorFor(c => c.CategoryId)
        </div>
    </div>
    <div class=" form-group">
        <div class="form-check col-nd-5">
            @Html.CheckBoxFor(c=>c.IsFavourite, "На главной страннице")
        </div>
        <div class="form-check col-nd-5">
            @Html.CheckBoxFor(c => c.Available, "Доступен для заказа")
        </div>
    </div>
    
        
    <input  type="submit" name="uploadedFile" />
    
</fieldset>
}
