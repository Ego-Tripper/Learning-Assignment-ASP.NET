@model IEnumerable<Category>

<a class="btn btn-block btn-deafult"asp-action="Index" asp-controller="Home">In main page</a>

@foreach(var category in Model)
{
    string Class = (@category.CategoryId == ViewBag.SelectedCategory) ? "btn btn-block btn-primary" : "btn btn-block btn-default";
    <a class=@Class
        asp-action="Index"
        asp-controller="Home"
        asp-route-category="@category.CategoryId"
        asp-route-page="1">
        @category.CategoryName
    </a>
}