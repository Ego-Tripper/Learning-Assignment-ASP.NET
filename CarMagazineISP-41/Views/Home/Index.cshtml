@using CarMagazineISP_41.Data.Models
@using CarMagazineISP_41.Data.ViewModels
@model IndexPagingModels

<h1 style=" align-self:center">Hello world!</h1>
<div id="carouselExample" class="carousel slide">
    <div class="carousel-inner">
        <div class="carousel-item active" >
            <img src="~/Img/Slider/Track.jpg" style="height: 600px; width: 500px" class="d-block w-100" alt="...">
        </div>
        <div class="carousel-item">
            <img src="~/Img/Slider/Track2.jpg" style="height: 600px; width: 500px" class="d-block w-100" alt="...">
        </div>
        <div class="carousel-item">
            <img src="~/Img/Slider/Track3.jpg" style="height: 600px; width: 500px" class="d-block w-100" alt="...">
        </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExample" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExample" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>
<div>
    @{
        for (int i = 1; i <= Model.MaxPage; i++)
        {
            <a href='?page=@i.ToString()'>@i.ToString()></a>
        }
    }
</div>
<div class="container" style="display: flex;gap:10px; margin-top: 20px;" >

@{

        foreach (var car in Model.Cars)
        {


            <div class="card" style="width: 18rem;">
                <img src="@car.Img" class="card-img-top" alt="...">
        <div class="card-body">
            <h5 class="card-title">@car.CarName</h5>
            <p class="card-text">@car.ShortDescription</p>
            <p class="card-text">@car.LongDescription</p>
            <p class="card-text">@car.Price.ToString()</p>
            <button onclick="location.href='@Url.Action("CarInfo", "Home", new { carId = car.CarId})'" class="btn btn-primary">Подробнее</button>
        </div>
    </div>
    }
}
</div>


